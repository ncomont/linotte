FROM alpine:latest

ENV LINOTTE_TAXREF_SERVICE_ENDPOINT=":50052"
ENV LINOTTE_TAXREF_DATABASE_HOST="localhost"
ENV LINOTTE_TAXREF_DATABASE_USER="linotte"
ENV LINOTTE_TAXREF_DATABASE_PASSWORD="l1n0tt3passwd"
ENV LINOTTE_TAXREF_DATABASE_NAME="linotte"
ENV LINOTTE_TAXREF_DATABASE_PORT=3306
ENV LINOTTE_TAXREF_DATABASE_VERBOSE_MODE="false"

EXPOSE 50052

ADD taxref /app/
WORKDIR /app

CMD ["/app/taxref"]
