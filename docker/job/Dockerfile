FROM alpine:latest

ENV LINOTTE_JOB_SERVICE_ENDPOINT=":50053"
ENV LINOTTE_JOB_DATABASE_HOST="localhost"
ENV LINOTTE_JOB_DATABASE_USER="linotte"
ENV LINOTTE_JOB_DATABASE_PASSWORD="l1n0tt3passwd"
ENV LINOTTE_JOB_DATABASE_NAME="linotte"
ENV LINOTTE_JOB_DATABASE_PORT=3306
ENV LINOTTE_JOB_DATABASE_VERBOSE_MODE="false"
ENV LINOTTE_JOB_RABBIT_ENDPOINT="amqp://guest:guest@localhost:5672/"
ENV LINOTTE_JOB_RABBIT_TASK_QUEUE_ID="job_task_queue"
ENV LINOTTE_JOB_RABBIT_RESULT_QUEUE_ID="job_result_queue"
ENV LINOTTE_JOB_RABBIT_STATUS_QUEUE_ID="job_status_queue"

EXPOSE 50053

ADD job /app/
WORKDIR /app

CMD ["/app/job"]
